<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecylerViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </ScrollView>


    <EditText
        android:id="@+id/ed"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:visibility="gone"
        android:hint="1"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ed"
        android:visibility="gone"
        android:text="跳转"/>

    <LinearLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#F6F6F8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/test2"
            android:drawablePadding="5dp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            android:text="test1"
            android:textSize="10sp"
            android:id="@+id/tab_first"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/test2"
            android:text="test1"
            android:drawablePadding="5dp"
            android:textSize="10sp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            android:id="@+id/tab_manager"/>

        <TextView
            android:id="@+id/tab_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/test2"
            android:drawablePadding="5dp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:text="test1"/>

        <TextView
            android:id="@+id/tab_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/test2"
            android:drawablePadding="5dp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:text="test1"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>